{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@src": ["src/index.ts"],
      "@src/*": ["src/*"]
    },
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "./index.ts",
    "test/**/*.ts"
  ]
}
